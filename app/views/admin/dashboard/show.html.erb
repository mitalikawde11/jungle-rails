<section class="dashboard-show">

  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <table class="table table-bordered">
      <thead>
        <tr>
          <th>Total Number of Products</th>
          <th>Total Number of Categories</th>
        </tr>
      </thead>
      <tbody>
        <td>
          <%= @product_count %>
        </td>
        <td>
          <%= @category_count %>
        </td>
      </tbody>
    </table>

  <div class="footer-btns">
    <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
    <%= link_to "Products Admin", admin_products_path, class: 'btn btn-lg btn-primary' %>
  </div>
   
</section>